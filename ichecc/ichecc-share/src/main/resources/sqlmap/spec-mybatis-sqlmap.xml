<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ichecc.domain.SpecMapper">

	<resultMap type="com.ichecc.domain.SpecDO" id="SpecDOResultMap">
		<id column="id" property="id" />
        <result column="spec_value" property="specValue"/>
        <result column="sort" property="sort"/>
        <result column="status" property="status"/>
        <result column="remark" property="remark"/>
        <result column="create_user_id" property="createUserId"/>
        <result column="create_time" property="createTime"/>
        <result column="modify_user_id" property="modifyUserId"/>
        <result column="modify_time" property="modifyTime"/>
	</resultMap>

	<sql id="MybatisSpecDAO_all_column_fields">
	      id,spec_value,sort,status,remark,create_user_id,create_time,modify_user_id,modify_time
 	</sql>
	<!-- 只有varchar char text类型 做 !='' 判断，生成代码时,其他类型时只做!=null 决断 0或fasle与空''是相同的，在mybatis中的动态语句中 -->
	<sql id="MybatisSpecDAO_dynamic_where_fields"><!-- xml转义字符需要 <![CDATA[   ]]> 标签-->
		<where>
			<if test="specValue != null  and specValue != '' "> AND spec_value=#{specValue} </if>
			<if test="sort != null "> AND sort=#{sort} </if>
			<if test="status != null "> AND status=#{status} </if>
			<if test="remark != null  and remark != '' "> AND remark=#{remark} </if>
			<if test="createUserId != null "> AND create_user_id=#{createUserId} </if>
			<if test="modifyUserId != null "> AND modify_user_id=#{modifyUserId} </if>
		</where>
 	</sql>
	
	<select id="MybatisSpecDAO_selectById" parameterType="long" resultMap="SpecDOResultMap">
		SELECT
			<include refid="MybatisSpecDAO_all_column_fields" />
		FROM
			spec
		WHERE
			 id = #{id}
	</select>
	
	
	
    <insert id="MybatisSpecDAO_insert" parameterType="com.ichecc.domain.SpecDO" useGeneratedKeys="true">
        <selectKey resultType="long" keyProperty="id" order="AFTER">
            SELECT LAST_INSERT_ID() AS id
        </selectKey>
        INSERT INTO spec(
				id,
				spec_value,
				sort,
				status,
				remark,
				create_user_id,
				create_time,
				modify_user_id,
				modify_time
		)values(
				#{id},
				#{specValue},
				#{sort},
				#{status},
				#{remark},
				#{createUserId},
				#{createTime},
				#{modifyUserId},
				#{modifyTime}
		)
    </insert>
	

	<update id="MybatisSpecDAO_updateById" parameterType="com.ichecc.domain.SpecDO">
		UPDATE spec
		SET
					spec_value = #{specValue},
					sort = #{sort},
					status = #{status},
					remark = #{remark},
					create_user_id = #{createUserId},
					modify_user_id = #{modifyUserId},
					modify_time = #{modifyTime}
		WHERE
			id = #{id}
	</update>

	<delete id="MybatisSpecDAO_deleteById" parameterType="long">
		DELETE FROM spec WHERE id = #{id}
	</delete>
	
	
	<update id="MybatisSpecDAO_update_dynamic" parameterType="com.ichecc.domain.SpecDO">
		UPDATE spec
		<set>
					<if test="specValue != null  and specValue != '' ">spec_value=#{specValue},</if>
					<if test="sort != null ">sort=#{sort},</if>
					<if test="status != null ">status=#{status},</if>
					<if test="remark != null  and remark != '' ">remark=#{remark},</if>
					<if test="createUserId != null ">create_user_id=#{createUserId},</if>
					<if test="modifyUserId != null ">modify_user_id=#{modifyUserId},</if>
					<if test="modifyTime != null ">modify_time=#{modifyTime},</if>
		</set>
		WHERE id = #{id}
	</update>

 	<select id="MybatisSpecDAO_select_dynamic" resultMap="SpecDOResultMap" parameterType="com.ichecc.domain.SpecDO">
	     SELECT
	     	<include refid="MybatisSpecDAO_all_column_fields" />
		 FROM
		 	spec
			<include refid="MybatisSpecDAO_dynamic_where_fields" />
 	</select>

 	<select id="MybatisSpecDAO_select_dynamic_count" resultType="long" parameterType="com.ichecc.domain.SpecDO">
	     SELECT
	     	count(1)
		 FROM
		 	spec
	 	<include refid="MybatisSpecDAO_dynamic_where_fields" />
 	</select>

 	<select id="MybatisSpecDAO_select_dynamic_page_query" resultMap="SpecDOResultMap" parameterType="com.ichecc.domain.SpecDO">
	     SELECT
	     	<include refid="MybatisSpecDAO_all_column_fields" />
		 FROM
		 	spec
	 	<include refid="MybatisSpecDAO_dynamic_where_fields" />
	 	ORDER BY spec.id DESC
	 	Limit #{start},#{pageSize}
 	</select>

</mapper>