<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ichecc.domain.ItemMapper">

	<resultMap type="com.ichecc.domain.ItemDO" id="ItemDOResultMap">
		<id column="id" property="id" />
        <result column="item_title" property="itemTitle"/>
        <result column="sub_title" property="subTitle"/>
        <result column="market_price" property="marketPrice"/>
        <result column="guide_price" property="guidePrice"/>
        <result column="status" property="status"/>
        <result column="remark" property="remark"/>
        <result column="create_user_id" property="createUserId"/>
        <result column="create_time" property="createTime"/>
        <result column="modify_user_id" property="modifyUserId"/>
        <result column="modify_time" property="modifyTime"/>
	</resultMap>

	<sql id="MybatisItemDAO_all_column_fields">
	      id,item_title,sub_title,market_price,guide_price,status,remark,create_user_id,create_time,modify_user_id,modify_time
 	</sql>
	<!-- 只有varchar char text类型 做 !='' 判断，生成代码时,其他类型时只做!=null 决断 0或fasle与空''是相同的，在mybatis中的动态语句中 -->
	<sql id="MybatisItemDAO_dynamic_where_fields"><!-- xml转义字符需要 <![CDATA[   ]]> 标签-->
		<where>
			<if test="itemTitle != null  and itemTitle != '' "> AND item_title=#{itemTitle} </if>
			<if test="subTitle != null  and subTitle != '' "> AND sub_title=#{subTitle} </if>
			<if test="marketPrice != null "> AND market_price=#{marketPrice} </if>
			<if test="guidePrice != null "> AND guide_price=#{guidePrice} </if>
			<if test="status != null "> AND status=#{status} </if>
			<if test="remark != null  and remark != '' "> AND remark=#{remark} </if>
			<if test="createUserId != null "> AND create_user_id=#{createUserId} </if>
			<if test="modifyUserId != null "> AND modify_user_id=#{modifyUserId} </if>
		</where>
 	</sql>
	
	<select id="MybatisItemDAO_selectById" parameterType="long" resultMap="ItemDOResultMap">
		SELECT
			<include refid="MybatisItemDAO_all_column_fields" />
		FROM
			item
		WHERE
			 id = #{id}
	</select>
	
	
	
    <insert id="MybatisItemDAO_insert" parameterType="com.ichecc.domain.ItemDO" useGeneratedKeys="true">
        <selectKey resultType="long" keyProperty="id" order="AFTER">
            SELECT LAST_INSERT_ID() AS id
        </selectKey>
        INSERT INTO item(
				id,
				item_title,
				sub_title,
				market_price,
				guide_price,
				status,
				remark,
				create_user_id,
				create_time,
				modify_user_id,
				modify_time
		)values(
				#{id},
				#{itemTitle},
				#{subTitle},
				#{marketPrice},
				#{guidePrice},
				#{status},
				#{remark},
				#{createUserId},
				#{createTime},
				#{modifyUserId},
				#{modifyTime}
		)
    </insert>
	

	<update id="MybatisItemDAO_updateById" parameterType="com.ichecc.domain.ItemDO">
		UPDATE item
		SET
					item_title = #{itemTitle},
					sub_title = #{subTitle},
					market_price = #{marketPrice},
					guide_price = #{guidePrice},
					status = #{status},
					remark = #{remark},
					create_user_id = #{createUserId},
					modify_user_id = #{modifyUserId},
					modify_time = #{modifyTime}
		WHERE
			id = #{id}
	</update>

	<delete id="MybatisItemDAO_deleteById" parameterType="long">
		DELETE FROM item WHERE id = #{id}
	</delete>
	
	
	<update id="MybatisItemDAO_update_dynamic" parameterType="com.ichecc.domain.ItemDO">
		UPDATE item
		<set>
					<if test="itemTitle != null  and itemTitle != '' ">item_title=#{itemTitle},</if>
					<if test="subTitle != null  and subTitle != '' ">sub_title=#{subTitle},</if>
					<if test="marketPrice != null ">market_price=#{marketPrice},</if>
					<if test="guidePrice != null ">guide_price=#{guidePrice},</if>
					<if test="status != null ">status=#{status},</if>
					<if test="remark != null  and remark != '' ">remark=#{remark},</if>
					<if test="createUserId != null ">create_user_id=#{createUserId},</if>
					<if test="modifyUserId != null ">modify_user_id=#{modifyUserId},</if>
					<if test="modifyTime != null ">modify_time=#{modifyTime},</if>
		</set>
		WHERE id = #{id}
	</update>

 	<select id="MybatisItemDAO_select_dynamic" resultMap="ItemDOResultMap" parameterType="com.ichecc.domain.ItemDO">
	     SELECT
	     	<include refid="MybatisItemDAO_all_column_fields" />
		 FROM
		 	item
			<include refid="MybatisItemDAO_dynamic_where_fields" />
 	</select>

 	<select id="MybatisItemDAO_select_dynamic_count" resultType="long" parameterType="com.ichecc.domain.ItemDO">
	     SELECT
	     	count(1)
		 FROM
		 	item
	 	<include refid="MybatisItemDAO_dynamic_where_fields" />
 	</select>

 	<select id="MybatisItemDAO_select_dynamic_page_query" resultMap="ItemDOResultMap" parameterType="com.ichecc.domain.ItemDO">
	     SELECT
	     	<include refid="MybatisItemDAO_all_column_fields" />
		 FROM
		 	item
	 	<include refid="MybatisItemDAO_dynamic_where_fields" />
	 	ORDER BY item.id DESC
	 	Limit #{start},#{pageSize}
 	</select>

</mapper>