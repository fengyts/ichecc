<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ichecc.domain.ItemPictureMapper">

	<resultMap type="com.ichecc.domain.ItemPictureDO" id="ItemPictureDOResultMap">
		<id column="id" property="id" />
        <result column="item_id" property="itemId"/>
        <result column="picture" property="picture"/>
        <result column="type" property="type"/>
        <result column="sort" property="sort"/>
        <result column="status" property="status"/>
        <result column="has_delete" property="hasDelete"/>
        <result column="create_user_id" property="createUserId"/>
        <result column="create_time" property="createTime"/>
        <result column="modify_user_id" property="modifyUserId"/>
        <result column="modify_time" property="modifyTime"/>
	</resultMap>

	<sql id="MybatisItemPictureDAO_all_column_fields">
	      id,item_id,picture,type,sort,status,has_delete,create_user_id,create_time,modify_user_id,modify_time
 	</sql>
	<!-- 只有varchar char text类型 做 !='' 判断，生成代码时,其他类型时只做!=null 决断 0或fasle与空''是相同的，在mybatis中的动态语句中 -->
	<sql id="MybatisItemPictureDAO_dynamic_where_fields"><!-- xml转义字符需要 <![CDATA[   ]]> 标签-->
		<where>
			<if test="itemId != null "> AND item_id=#{itemId} </if>
			<if test="picture != null  and picture != '' "> AND picture=#{picture} </if>
			<if test="type != null  and type != '' "> AND type=#{type} </if>
			<if test="sort != null "> AND sort=#{sort} </if>
			<if test="status != null "> AND status=#{status} </if>
			<if test="hasDelete != null "> AND has_delete=#{hasDelete} </if>
			<if test="createUserId != null "> AND create_user_id=#{createUserId} </if>
			<if test="modifyUserId != null "> AND modify_user_id=#{modifyUserId} </if>
		</where>
 	</sql>
	
	<select id="MybatisItemPictureDAO_selectById" parameterType="long" resultMap="ItemPictureDOResultMap">
		SELECT
			<include refid="MybatisItemPictureDAO_all_column_fields" />
		FROM
			item_picture
		WHERE
			 id = #{id}
	</select>
	
	
	
    <insert id="MybatisItemPictureDAO_insert" parameterType="com.ichecc.domain.ItemPictureDO" useGeneratedKeys="true">
        <selectKey resultType="long" keyProperty="id" order="AFTER">
            SELECT LAST_INSERT_ID() AS id
        </selectKey>
        INSERT INTO item_picture(
				id,
				item_id,
				picture,
				type,
				sort,
				status,
				has_delete,
				create_user_id,
				create_time,
				modify_user_id,
				modify_time
		)values(
				#{id},
				#{itemId},
				#{picture},
				#{type},
				#{sort},
				#{status},
				#{hasDelete},
				#{createUserId},
				#{createTime},
				#{modifyUserId},
				#{modifyTime}
		)
    </insert>
	

	<update id="MybatisItemPictureDAO_updateById" parameterType="com.ichecc.domain.ItemPictureDO">
		UPDATE item_picture
		SET
					item_id = #{itemId},
					picture = #{picture},
					type = #{type},
					sort = #{sort},
					status = #{status},
					has_delete = #{hasDelete},
					create_user_id = #{createUserId},
					modify_user_id = #{modifyUserId},
					modify_time = #{modifyTime}
		WHERE
			id = #{id}
	</update>

	<delete id="MybatisItemPictureDAO_deleteById" parameterType="long">
		DELETE FROM item_picture WHERE id = #{id}
	</delete>
	
	
	<update id="MybatisItemPictureDAO_update_dynamic" parameterType="com.ichecc.domain.ItemPictureDO">
		UPDATE item_picture
		<set>
					<if test="itemId != null ">item_id=#{itemId},</if>
					<if test="picture != null  and picture != '' ">picture=#{picture},</if>
					<if test="type != null  and type != '' ">type=#{type},</if>
					<if test="sort != null ">sort=#{sort},</if>
					<if test="status != null ">status=#{status},</if>
					<if test="hasDelete != null ">has_delete=#{hasDelete},</if>
					<if test="createUserId != null ">create_user_id=#{createUserId},</if>
					<if test="modifyUserId != null ">modify_user_id=#{modifyUserId},</if>
					<if test="modifyTime != null ">modify_time=#{modifyTime},</if>
		</set>
		WHERE id = #{id}
	</update>

 	<select id="MybatisItemPictureDAO_select_dynamic" resultMap="ItemPictureDOResultMap" parameterType="com.ichecc.domain.ItemPictureDO">
	     SELECT
	     	<include refid="MybatisItemPictureDAO_all_column_fields" />
		 FROM
		 	item_picture
			<include refid="MybatisItemPictureDAO_dynamic_where_fields" />
 	</select>

 	<select id="MybatisItemPictureDAO_select_dynamic_count" resultType="long" parameterType="com.ichecc.domain.ItemPictureDO">
	     SELECT
	     	count(1)
		 FROM
		 	item_picture
	 	<include refid="MybatisItemPictureDAO_dynamic_where_fields" />
 	</select>

 	<select id="MybatisItemPictureDAO_select_dynamic_page_query" resultMap="ItemPictureDOResultMap" parameterType="com.ichecc.domain.ItemPictureDO">
	     SELECT
	     	<include refid="MybatisItemPictureDAO_all_column_fields" />
		 FROM
		 	item_picture
	 	<include refid="MybatisItemPictureDAO_dynamic_where_fields" />
	 	ORDER BY item_picture.id DESC
	 	Limit #{start},#{pageSize}
 	</select>
 	
 	<select id="MybatisItemPictureDAO_select_by_itemIds"  resultMap="ItemPictureDOResultMap" parameterType="list">
 		SELECT
 			<include refid="MybatisItemPictureDAO_all_column_fields" />
 		FROM
 			item_picture
 		WHERE 
 			type = '01'
		AND status = 1
 		AND item_id	IN	
 			(
	 		<foreach collection="list" index="index" item="itemId" separator=",">
	 			#{itemId}
	 		</foreach>
 			)
 	</select>
 	
 	<update id="MybatisItemPictureDAO_update_byItemId" parameterType="long">
 		UPDATE
 			item_picture
 		SET status = 0
 		WHERE item_id = #{itemId}
 	</update>
 	
 	<update id="MybatisItemPictureDAO_update_deleteStatus">
 		UPDATE
 			item_picture
 		SET has_delete = 1
 		WHERE has_delete = 0
 	</update>

</mapper>